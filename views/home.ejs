<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gitalyzer</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="https://unpkg.com/typewriter-effect@latest/dist/core.js"></script>
    <style>
        #particles-js {
            background-color: white;
            height: 100%;
            width: 100%;
        }

        #typewriter {
            position: absolute;
            font-size: 80px;
            font-family: 'B612', sans-serif;
            font-weight: 700;
            width: 100%;
            margin: 350px 250px;
        }

        .container {
            position: relative;
        }


        .center-center {
            width: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .center-top {

            width: 50%;
            position: absolute;
            top: 15%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        #username {
            box-shadow: 4px 3px 8px 1px #969696;
            -webkit-box-shadow: 4px 3px 8px 1px #969696;
            border-radius: 10px;
            border: 1px solid;
            position: relative;
            font-size: 2rem;
            text-align: center;
            width: 100%;
        }

        .fullwidth-center {
            position: relative;
            width: 100%;
            text-align: center;
        }

        #type-title {
            font-size: 80px;
            font-family: 'B612', sans-serif;
            font-weight: 400;
        }
    </style>
</head>

<body id="particles-js">

    <div class="center-top">
        <div class="fullwidth-center">
            <div id="type-title"></div>
        </div>
    </div>
    <div class="center-center">
        <input class=" username" id="username" type="text" placeholder="Insert a GitHub nickname">
    </div>



    <script>
        particlesJS('particles-js', {
            "particles": {
                "number": {
                    "value": 60
                },
                "color": {
                    "value": "#000"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000"
                    }
                },
                "polygon": {
                    "nb_sides": 3
                },
                "opacity": {
                    "value": 0.9,
                    "random": false,
                    "anim": {
                        "enable": false,
                        "speed": 1,
                        "opacity_min": 0.1,
                        "sync": false
                    }
                },
                "size": {
                    "value": 3,
                    "anim": {
                        "enable": false,
                        "speed": 40,
                        "size_min": 0.1,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#333",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 6,
                    "direction": "none",
                    "random": false,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false,
                    "attract": {
                        "enable": false,
                        "rotateX": 600,
                        "rotateY": 1200
                    }
                }
            }
        });


        const title = new Typewriter('#type-title', {
            loop: true
        });
        title.typeString("Gitalyzer")
            .deleteChars(6)
            .typeString('Hub Analyzer')
            .pauseFor(500)
            .start();


        $('#username').data('holder', $('#username').attr('placeholder'));
        $('#username').focusin(function () {
            $(this).attr('placeholder', '');
        });
        $('#username').focusout(function () {
            $(this).attr('placeholder', $(this).data('holder'));
        });
        $('#username').keyup(function (e) {
            if (e.keyCode == 13) {
                $(this).trigger("enterKey");
            }
        });
        $('#username').bind("enterKey", function (e) {
            window.location.href = `/user/${$(this).val()}`;
        });
    </script>
</body>

</html>